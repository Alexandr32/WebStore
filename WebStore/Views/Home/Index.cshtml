@model IEnumerable<WebStore.ViewsModels.EmployeeView>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8" />
    <title>Index</title>
</head>
<body>

    <table>
        <thead>
            <tr>
                <td>Id</td>
                <td>Фамилия</td>
                <td>Имя</td>
                <td>Отчество</td>
                <td>Возраст</td>
                <td>Дата рождения</td>
                <td>Дата начала работы</td>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.SurName</td>
                <td>@item.Patronymic</td>
                <td>@item.Age</td>
                <td>@item.DateBirth.ToLongDateString()</td>
                <td>@item.DateEmployment.ToLongDateString()</td>
                <td>@Html.ActionLink("Детали", "Details", new { id = item.Id})</td>
            </tr>
        }
    </table>

</body>
</html>

