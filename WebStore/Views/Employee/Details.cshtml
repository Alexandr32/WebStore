@model WebStore.ViewsModels.EmployeeView

@{
    ViewData["Title"] = "Информация о сотруднике";
}

<h1>@ViewData["Title"]</h1>
<h4>Сотрудник</h4>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName):
        </dt>
        <dd class = "col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SurName):
        </dt>
        <dd class = "col-sm-10">
            @Model.SurName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patronymic):
        </dt>
        <dd class = "col-sm-10">
            @Model.Patronymic
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age):
        </dt>
        <dd class = "col-sm-10">
            @Model.Age
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateBirth):
        </dt>
        <dd class = "col-sm-10">
            @Model.DateBirth.ToLongDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateEmployment):
        </dt>
        <dd class = "col-sm-10">
            @Model.DateEmployment.ToLongDateString()
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
    <hr />
</div>